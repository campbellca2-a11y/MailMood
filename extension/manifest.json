{
  "manifest_version": 3,
  "name": "MailMood",
  "version": "1.0.0",
  "description": "Emotional intelligence for email communication",
  "permissions": ["storage"],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "js": ["content/index.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ]
}
